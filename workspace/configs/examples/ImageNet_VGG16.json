{
    "n_gpu": 1,
    "root_dir": "./",
    "name": "ImageNet_VGG16",

    "datasets": {
        "train": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "ImageNetDataset",
                "kwargs": {
                    "data_dir": "./data/ImageNet",
                    "mode": "train"
                }
            }
        },
        "valid": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "ImageNetDataset",
                "kwargs": {
                    "data_dir": "./data/ImageNet",
                    "mode": "valid"
                }
            }
        },
        "test": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "ImageNetDataset",
                "kwargs": {
                    "data_dir": "./data/ImageNet",
                    "mode": "valid"
                }
            }
        }
    },
    "data_loaders": {
        "train": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "DataLoader",
                "kwargs": {
                    "batch_size": 64,
                    "shuffle": true,
                    "num_workers": 4
                }
            }
        },
        "valid": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "DataLoader",
                "kwargs": {
                    "batch_size": 64,
                    "shuffle": false,
                    "num_workers": 4
                }
            }
        },
        "test": {
            "data": {
                "module": ".examples.ImageNet_loader",
                "type": "DataLoader",
                "kwargs": {
                    "batch_size": 64,
                    "shuffle": false,
                    "num_workers": 4
                }
            }
        }
    },
    "models": {
        "model": {
            "module": ".examples.VGG16",
            "type": "VGG16",
            "kwargs": {
                "feature_extracting": true
            }
        }
    },
    "losses": {
        "loss": {
            "type": "CrossEntropyLoss"
        }
    },
    "metrics": {
        "per_iteration": ["accuracy", "top_k_acc"],
        "per_epoch": []
    },
    "optimizers": {
        "model": {
            "type": "SGD",
            "kwargs": {
                "lr": 0.001,
                "momentum": 0.9
            }
        }
    },
    "lr_schedulers": {
        "model": {
            "type": "StepLR",
            "kwargs": {
                "step_size": 50,
                "gamma": 0.1
            }
        }
    },
    "trainer": {
        "module": ".trainer",
        "type": "Trainer",
        "kwargs": {
            "finetune": true,
            "epochs": 2,
            "len_epoch": null,

            "save_period": 5,
            "save_the_best": true,
            "verbosity": 2,

            "monitor": "min val_loss",
            "early_stop": 10,

            "tensorboard": false
        }
    }
}
